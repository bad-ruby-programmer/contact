<%= form_for :movie, url: movies_path do |f| %>
  <table>
    <tr class="header-row">
      <td colspan=2>
        <h3>
          Добавить фильм
        </h3>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :name, "Название" %><br>
        <%= f.text_field :name %>
      </td>
      <td>
        <%= f.label :release_year, "Год выхода" %><br>
        <%= f.text_field :release_year %>
      </td>
    </tr>
    <tr>
      <td class="movie-description" colspan=2>
        <%= f.label :description, "Описание" %><br>
        <%= f.text_area :description %>
      </td>
    </tr>
    <tr>
      <td colspan=2>
        <%= f.submit "Сохранить" %>
      </td>
    </tr>
  </table>
<% end %>